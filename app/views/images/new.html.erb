<h1>Images#new</h1>
<%= form_for @image do |f| %>
    <%= render 'shared/error_messages' %>
    <p>
    <%= f.label :file %><br />
    <%= f.file_field :file %>
    </p>
    <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
    </p>
    <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
    </p>
    <%= f.submit "Upload image" %>
<% end %>
